#!/usr/bin/env bash

# This script displays the time for 12 hours and 59 minutes

# Initialize variables for hours and minutes
hour=0
minute=1

# Use a while loop to iterate through hours from 0 to 12
while [ $hour -le 12 ]
do
    # Display the current hour
    echo "Hour: $hour"

    # Use a nested while loop to iterate through minutes from 1 to 59
    while [ $minute -le 59 ]
    do
        # Display the current minute
        echo "$minute"

        # Increment the minute
        ((minute++))
    done

    # Reset the minute for the next hour
    minute=1

    # Increment the hour
    ((hour++))
done
